<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "Shared/errors", obj: @article %>

            <%= form_with(model: @article, class: "shadow p-3 mb-3 mt-3 bg-white rounded", local: true, data: { turbo: false }) do |f| %>
                <%= f.text_field :title, class: "form-control shadow rounded mb-3", placeholder: "Title", autocomplete: :off %>
                <%= f.text_area :description, class: "form-control pb-5 shadow rounded mb-3", placeholder: "Description", autocomplete: :off %>
                <%= f.submit class: "form-control btn btn-secondary btn-lg shadow rounded"%>
            <% end %>
        </div>

        <div class="mb-3">
            <%= link_to "[ Cancel and Return to Articles Listing ]", articles_path, class: "row justify-content-center text-decoration-none text-secondary mt-4" %>
        </div>
    </div>
</div>