<h1>Articles listing page</h1>

<table>
    <tr><strong>Title:</strong></tr>
    <tr><strong>Description:</strong></tr>
    <tr><strong>Actions:</strong></tr>
</table>

<table>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to "Show", article_path(article) %></td>
            <td><%= link_to "Delete", article_path(article), data: { turbo_method: :delete } %> </td>
        </tr>
    <% end %>
</table>