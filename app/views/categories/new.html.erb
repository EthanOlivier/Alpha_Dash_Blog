<h1 class="text-center mt-4">Create a new Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "Shared/errors", obj: @category %>

            <%= form_with(model: @category, class: "shadow p-3 mb-3 mt-3 bg-white rounded", local: true, data: { turbo: false }) do |f| %>
                <%= f.text_field :name, class: "form-control shadow rounded mb-3", placeholder: "Category Name", autocomplete: :off %>
                <%= f.submit class: "form-control btn btn-secondary btn-lg shadow rounded" %>
            <% end %>
        </div>

        <div class="mb-3">
            <%= link_to "[ Cancel and Return to Articles Listing ]", articles_path, class: "row justify-content-center text-decoration-none text-secondary mt-4" %>
        </div>
    </div>
</div>