<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">

            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 mt-3 bg-white rounded", local: true, data: { turbo: false }) do |f| %>
                <%= f.email_field :email, class: "form-control shadow rounded mb-3", placeholder: "Enter your email address", autocomplete: :off %>
                <%= f.text_field :password, class: "form-control shadow rounded mb-3", placeholder: "Enter your password", autocomplete: :off %>
                <%= f.submit "Log in", class: "form-control btn btn-secondary btn-lg shadow rounded" %>
            <% end %>
        </div>

        <div class="mb-3">
            <%= link_to "[ Cancel and Return to Articles Listing ]", articles_path, class: "row justify-content-center text-decoration-none text-secondary mt-4" %>
        </div>
    </div>
</div>